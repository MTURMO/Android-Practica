<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6470e">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="20sp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:layout_marginStart="40sp"/>

        <ImageView
            android:id="@+id/menu_settings"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon_settings"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:onClick="User"/>
        <ImageView
            android:id="@+id/Chats"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/_75e0e784a1623517b75ea61bc1db555_icono_de_mensaje_basico"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50sp"
            android:clickable="true"
            android:onClick="mensajes"
            android:backgroundTint="#E6470e"/>
        <ImageView
            android:id="@+id/Solicitudes"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/anadir_amigo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100sp"
            android:clickable="true"
            android:onClick="Solicitudes"
            android:background="#E6470e"/>
    </RelativeLayout>
</RelativeLayout>