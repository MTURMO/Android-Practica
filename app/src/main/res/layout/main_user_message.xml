<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_main_user_message_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    app:cardCornerRadius="8sp">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:backgroundTint="@color/miMensaje">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_main_user_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/chat_main_user_message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textSize="10sp"
                    android:gravity="end"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"/>
            </LinearLayout>
    <TextView
            android:id="@+id/chat_main_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi mensaje"
            android:textSize="20sp"
            android:padding="5sp"
            android:textAlignment="textStart"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>