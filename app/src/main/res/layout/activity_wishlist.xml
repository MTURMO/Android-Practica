<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activities.WishlistActivity">
    <TextView
        android:id="@+id/wishlist_activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="center"
        android:textSize="50sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wishlist_activity_user_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="User"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/wishlist_activity_num_gifts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="10 gifts"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/wishlist_activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llegué al club con el combo, rápido la vi lejos, se pintaba los labios, y la copa como espejo, se acercó poco a poco, y yo queriendo que me baile , luego me dijo, Vamos, que te enseño Buenos Aire"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wishlist_activity_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>